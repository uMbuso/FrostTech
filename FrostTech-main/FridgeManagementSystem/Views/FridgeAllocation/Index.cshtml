@model IEnumerable<FridgeManagementSystem.BLL.DTOs.FridgeAllocationRequestDto>

@{
    ViewData["Title"] = "Index";
}


<div class="card" style="width:100%;margin:0;margin-top:100px;padding:0;border:none!important;">
    <div class="card-header bg-dark text-white">
        <h3>Customer Fridge Requests</h3>
    </div>
    <div class="card-body" style="width:100%;margin:0;padding:0;">
        <table class="table table-striped table-bordered" style="width:100%;margin:0;border-color:#a3a2a3">
            <thead class="text-white" style="background-color:#146083">
                <tr>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        Date
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.AddressId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressLine1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressLine2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Province)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BusinessType)
                    </th>
                    <th>
                        Status
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.FridgeType)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.MaintenanceDate)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.ApprovedBy)
                    </th>
                    <th hidden>
                        @Html.DisplayNameFor(model => model.IsApproved)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AllocationDate)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.AddressId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressLine1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AddressLine2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Province)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BusinessType)
                        </td>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Action)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.FridgeType)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.MaintenanceDate)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.ApprovedBy)
                        </td>
                        <td hidden>
                            @Html.DisplayFor(modelItem => item.IsApproved)
                        </td>
                        <td class="text-center">
                            <a class="fw-bold" href="@Url.Action("Edit", new {id = item.Id})">
                                View
                            </a>
                            @* <a href="javascript:void(0);" class="anchorDetail btn fw-bold text-white bg-danger" data-id="@item.Id"><i class="bi bi-trash pe-1"></i>Delete</a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
